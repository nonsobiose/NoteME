<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="60dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/month_day_display"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:text="Mar 22"
        android:gravity="center_horizontal"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxEms="18"
        android:singleLine="true"
        android:text="Theres absolutely nothing valuable in the note, it is just a dummy"
        app:layout_constraintBottom_toTopOf="@+id/month_day_display"
        app:layout_constraintStart_toEndOf="@+id/month_day_display"
        app:layout_constraintTop_toBottomOf="@+id/year_display" />

    <TextView
        android:id="@+id/year_display"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="2018"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_day_display" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/year_display" />
</android.support.constraint.ConstraintLayout>
